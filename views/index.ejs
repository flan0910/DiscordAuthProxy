<dialog id="modal-logout">
  <article>
    <a href="#close"
      aria-label="Close"
      class="close"
      data-target="modal-logout"
      onClick="toggleModal(event)">
    </a>
    <h3>ログアウトしますか？</h3>
    <p>
      --------------------------------------------------
    </p>
    <footer>
      <a href="#cancel"
        role="button"
        class="secondary"
        data-target="modal-logout"
        onClick="toggleModal(event)">
        Cancel
      </a>
      <a
        role="button"
        href="/login/logout">
        Logout
      </a>
    </footer>
  </article>
</dialog>
<%- include('pages/'+ pages +'.ejs').replace(/(\s+)</g, "<").replace(/(\s+)>/g, ">") %>
</body>
</html>
